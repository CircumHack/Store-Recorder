        size_hint:1,1
        padding_x:.2
        padding_y:.1
        do_scroll_x:False
        do_scroll_y:True
        overscroll:False
        MDRelativeLayout:
            size_hint:.75,1.55
            spacing:10                    
            LP:
                text:'[b]Create User Profile[/b]'                
                size_hint:1,.1
                font_size:20
                pos_hint:{'center_x':.68,'y':.91}
                halign:'center'
                markup:True        
            MsCard:
                size_hint:.96,.85
                elevation:15
                radius:[15]
                pos_hint:{'center_x':.675,'y':0.075}
