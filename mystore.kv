                        id:email
                        hint_text:'Email Address'                    
                        max_text_length:40                    
                    MDBoxLayout:
                        size_hint_y:.6
                        spacing:10
                        orientation:'horizontal'
                        CCode:
                            id:ccode
                            text:'+234'
                            size_hint:.3,.89
                            icon:'earth'
                            on_release:app.countrydrop.open()
                        NumText:
                            id:pnum
                            hint_text:'Phone Number'
                            size_hint:.4,.89
                            input_filter:int
            Command:
                id:cowner
                text:'CREATE'
                pos_hint:{'x':.8,'y':.025}
                size_hint:.3,.04
                on_release:app.root.change_screen('create')
            Command:
                id:jshop
                text:'JOIN'
                pos_hint:{'x':.4,'y':.025}
                size_hint:.3,.04
                on_release:app.root.current='join'
