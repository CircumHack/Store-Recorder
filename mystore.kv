MyAppManager:
    id:manager
    canvas:
        Color:
            rgb:.1,1,.2
        Rectangle:
            size:self.size
            pos:self.pos
    
    SplashScreen:
        id:splash
        name:'splash'

    New:
        id:new
        name:'new'

    ACamera:
        id:acamera
        name:'acamera'

    PhotoFile:
        id:photoFile
        name:'photofile'

    Create:
        id:create
        name:'create'

    Join:
        id:join
        name:'join'

    Login:
        id:login
        name:'login'
    
    ForgotPass:
        id:forgotpass
        name:'forgotpass'

    ChangePass:
        id:changepass
        name:'changepass'
    Screen:
        id:home
        name:'home'
        MDNavigationLayout:
            id:home_layout
            ScreenManager:
                id:home_manager
                Home:
                    id:main_home
                    name:'home'
                Product:
                    id:product
                    name:'product'
                Employee:
                    id:employee
                    name:'employee'
                Branch:
                    id:branch
                    name:'branch'
            HomeDrawer:
                id:home_drawer
                state:'close'
                size_hint_x:.75
                ScrollView:
                    size_hint:1,1
                    do_scroll_x:False
                    do_scroll_y:True
                    Content: 
                        orientation:'vertical'
                        size_hint:1,1
                        pos_hint:{'top':1}

