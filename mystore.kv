                        id:fname
                        hint_text:'First Name'
                    Text:
                        id:lname
                        hint_text:'Last Name'                    
                    Text:
                        id:oname
                        hint_text:'Other Name'                    
                    LP:
                        text:'Gender'
                        size_hint:.2,.3
                    MDBoxLayout:
                        size_hint:.9,.5
                        spacing:5
                        adaptive_size:True
                        orientation:'horizontal'
                        GenderSwitch:
                            CupertinoSystemButton:
                                text:'Male'


                    Text:
                        id:password
                        password:True
                        hint_text:'Password'                    
                    BigText:
                        id:address
                        multiline:True
                        hint_text:'Home Address'
                        size_hint_y:1.5
                        max_text_length:70
                    Command:
                        id:dob
                        text:'Select Date of Birth'
                        size_hint:.2,.6
                        center_x:.5
                        on_release:app.datepick.open()
